{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "Mensagem do commit",
            "default": "update"
        }
    ],
    "tasks": [
        {
            "label": "git: add commit push (prompt)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "git add .; Start-Sleep -Milliseconds 1500; git commit -m \"${input:commitMessage}\"; Start-Sleep -Milliseconds 1500; git push"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "shared",
                "clear": true
            }
        }
    ]
}